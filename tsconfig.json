{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@ui": ["./src/shared/ui"],
            "@ui/*": [
                "./src/shared/ui/*"
            ],
            "@pages": ["./src/pages"],
            "@pages/*": [
                "./src/pages/*"
            ]
        }
    }
}